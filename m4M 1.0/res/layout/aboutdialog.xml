<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    >
    <ScrollView 
    	 android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
    >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingBottom="5dip"
    >
    <TextView 
    	android:textColor="#FF000000" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content"
    	android:paddingTop="10dip"
    	android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
    	android:text="Please state your message. If you are reporting a bug, kindly include the version number you are using and steps to reproduce the bug if possible. Kindly include your name and contact details."
    />
    
    <EditText 
    	android:layout_marginTop="10dip"
    	android:layout_height="wrap_content"
    	android:minLines="7"
    	android:layout_width="fill_parent"
    	android:id="@+id/about_msg"
    	android:inputType = "textMultiLine|textAutoComplete"
    	android:gravity="top"
    	android:layout_marginLeft="5dip"
    	android:layout_marginRight="5dip"
    	android:layout_marginBottom="5dip"
    />
 
   <Button 
    	android:layout_width="200dip"
    	android:layout_height="wrap_content"
    	android:text="Send E-Mail"
    	android:id="@+id/about_send"
    	android:layout_gravity="center_horizontal"
    />
</LinearLayout> 
</ScrollView>
</LinearLayout>